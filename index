<body>
    <header>
        <h1>Portafolio de Proyectos Web</h1>
        <p>Explora y publica tus proyectos realizados en clase</p>
    </header>

    <div class="container">
        <form id="projectForm">
            <h2>Publicar nuevo proyecto</h2>
            <input type="text" id="title" placeholder="Título del proyecto" required />
            <textarea id="description" placeholder="Descripción breve del proyecto" required></textarea>
            <input type="url" id="link" placeholder="Enlace al proyecto" required />
            <button type="submit">Publicar</button>
        </form>

        <div class="grid" id="projectGrid"></div>
    </div>

    <footer>
        <p>&copy; 2025 Portafolio Virtual | Programación Web</p>
    </footer>

    <script>
        const projects = [
            {
                title: "Tienda Virtual",
                description: "Un sitio web de comercio electrónico creado con HTML, CSS y JS.",
                link: "",
            },
            {
                title: "Blog Personal",
                description: "Blog diseñado con diseño responsivo y comentarios dinámicos.",
                link: "",
            },
            {
                title: "Galeria de Imágenes",
                description: "Proyecto que utiliza JavaScript para filtrar imágenes por categorías.",
                link: "",
            }
        ];

        const projectGrid = document.getElementById('projectGrid');

        function renderProjects() {
            projectGrid.innerHTML = "";
            projects.forEach(project => {
                const card = document.createElement('div');
                card.className = 'card';
                card.innerHTML = `
                    <iframe src="${project.link}" loading="lazy"></iframe>
                    <div class="card-content">
                        <div class="card-title">${project.title}</div>
                        <div class="card-desc">${project.description}</div>
                    </div>
                `;
                projectGrid.appendChild(card);
            });
        }

        document.getElementById('projectForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const title = document.getElementById('title').value.trim();
            const description = document.getElementById('description').value.trim();
            const link = document.getElementById('link').value.trim();

            if (title && description && link) {
                projects.push({ title, description, link });
                renderProjects();
                this.reset();
            }
        });

        renderProjects();
    </script>
